<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">



    <LinearLayout
        android:id="@+id/ll_tabView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/home_layout2"
        android:orientation="vertical"

        >

        <View
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:background="#E9E9E9"/>
        <LinearLayout
            android:id="@+id/home_layout3"
            android:layout_width="match_parent"
            android:layout_height="44dp"

            android:background="#ffffff"


            android:orientation="horizontal">

            <RelativeLayout
                android:id="@+id/home_shaixuan1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/home_text1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:textSize="13dp"
                    android:textColor="@color/huise"
                    android:text="运动项目" />

                <ImageView
                    android:layout_width="6dp"
                    android:layout_height="4dp"
                    android:id="@+id/home_image1"
                    android:layout_centerInParent="true"
                    android:layout_toRightOf="@id/home_text1"
                    android:background="@mipmap/xiajiantou" />

            </RelativeLayout>



            <RelativeLayout
                android:id="@+id/home_shaixuan3"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/home_text3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:textSize="13dp"
                    android:textColor="@color/huise"
                    android:text="距离范围" />

                <ImageView
                    android:layout_width="6dp"
                    android:layout_height="4dp"
                    android:id="@+id/home_image3"
                    android:layout_centerInParent="true"
                    android:layout_toRightOf="@id/home_text3"
                    android:background="@mipmap/xiajiantou" />

            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/home_shaixuan2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/home_text2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:textSize="13dp"
                    android:textColor="@color/huise"
                    android:text="推荐排序" />

                <ImageView
                    android:layout_width="6dp"
                    android:layout_height="4dp"
                    android:layout_centerInParent="true"
                    android:id="@+id/home_image2"
                    android:layout_toRightOf="@id/home_text2"
                    android:background="@mipmap/xiajiantou" />

            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/home_shaixuan4"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/home_text4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:textSize="13dp"
                    android:textColor="@color/huise"
                    android:text="筛选" />

                <ImageView
                    android:layout_width="6dp"
                    android:layout_height="4dp"
                    android:layout_centerInParent="true"
                    android:id="@+id/home_image4"
                    android:layout_toRightOf="@id/home_text4"
                    android:background="@mipmap/xiajiantou" />

            </RelativeLayout>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#E9E9E9"/>
    </LinearLayout>


    <View
        android:id="@+id/line"
        android:layout_below="@+id/ll_tabView"
        android:layout_width="match_parent"
        android:layout_height="0.2dp"
        />
</RelativeLayout>
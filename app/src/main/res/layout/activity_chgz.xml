<?xml version="1.0" encoding="utf-8"?>

<ScrollView android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android">
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context=".Home.CGGZActivity">




    <include
        layout="@layout/layout_tab"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="#ffffff"
        android:focusable="true"
        android:focusableInTouchMode="true"

        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="场馆名称"
            android:textColor="#FF333333"
            android:textSize="15dp"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="16dp"
            android:layout_gravity="center"
            />


        <EditText
            android:id="@+id/cggz_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="请输入场馆名称"
            android:textColor="#FF9B9B9B"
            android:textSize="15dp"
            android:background="@null"
            android:layout_gravity="center"
            />
    </LinearLayout>
    <com.example.android.promoter.Toos.MyListView
        android:id="@+id/cggz_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        ></com.example.android.promoter.Toos.MyListView>

    <!--分割线-->
    <LinearLayout
        android:id="@+id/cggz_dizhi"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="#ffffff"
        android:layout_marginTop="2dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="场馆位置"
            android:textColor="#FF333333"
            android:textSize="15dp"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="16dp"
            android:layout_gravity="center"
            />

        <TextView
            android:id="@+id/cggz_dizhi_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="#FF333333"
            android:textSize="15dp"
            android:background="@null"
            android:layout_gravity="center"
            />
    </LinearLayout>
    <!--分割线-->
    <LinearLayout
        android:id="@+id/cggz_xiangxi"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="#ffffff"
        android:layout_marginTop="2dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="详细地址"
            android:textColor="#FF333333"
            android:textSize="15dp"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="16dp"
            android:layout_gravity="center"
            />

        <EditText
            android:id="@+id/cggz_xiangxi_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="#FF333333"
            android:textSize="15dp"
            android:background="@null"
            android:layout_gravity="center"
            />
    </LinearLayout>
    <!--分割线-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="#ffffff"
        android:layout_marginTop="2dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="场馆电话"
            android:textColor="#FF333333"
            android:textSize="15dp"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="16dp"
            android:layout_gravity="center"
            />

        <EditText
            android:id="@+id/cggz_shouji"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="商户座机或手机号"
            android:textColor="#FF9B9B9B"
            android:textSize="15dp"
            android:background="@null"
            android:layout_gravity="center"
            />
    </LinearLayout>
    <!--分割线-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="#ffffff"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="营业时间"
            android:textColor="#FF333333"
            android:textSize="15dp"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="16dp"
            android:layout_gravity="center"
            />
        <Spinner
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:id="@+id/spinner1"
            android:layout_gravity="center"
            />
       <TextView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="至"
           android:layout_gravity="center"
           />
        <Spinner
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:id="@+id/spinner2"
            android:layout_gravity="center"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="运动项目"
            android:textColor="#FF333333"
            android:textSize="15dp"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_gravity="center"
            />
        <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            />
    </LinearLayout>

    <!--分割线-->


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="#ffffff"
        android:layout_marginTop="2dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="12dp"
            android:text="服务设施："
            android:textColor="#FF333333"
            android:textSize="14dp" />

        <ImageView
            android:id="@+id/cggz_wifi"
            android:layout_width="17dp"
            android:layout_height="14dp"
            android:background="@mipmap/wifihui"
            android:layout_gravity="center"
            />
        <ImageView
            android:id="@+id/cggz_tingche"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:background="@mipmap/tingchehui"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            />
        <ImageView
            android:id="@+id/cggz_linyu"
            android:layout_width="13dp"
            android:layout_height="16dp"
            android:background="@mipmap/linyuhui"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            />
    </LinearLayout>
    <!--分割线-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="#ffffff"
        android:layout_marginTop="10dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="场馆实拍"
            android:textColor="#FF333333"
            android:textSize="15dp"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="16dp"
            android:layout_gravity="center"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#ffffff"
        >
        <GridView
            android:id="@+id/cggz_grid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:numColumns="3"
            />
        <!--android:verticalSpacing="200dp"-->

    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="温馨提示：拍摄包含正确信息的照片，审核速度会提升50%呦！"
        android:textColor="#FF9B9B9B"
        android:textSize="12dp"
    android:background="#ffffff"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        />
    <!--分割线-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="#ffffff"
        android:layout_marginTop="10dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="场馆描述"
            android:textColor="#FF333333"
            android:textSize="15dp"
            android:layout_marginLeft="12dp"
            android:layout_gravity="center"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="（至少5字）"
            android:textColor="#FF9B9B9B"
            android:textSize="12dp"
            android:layout_gravity="center"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="#ffffff"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="12dp"
        android:orientation="vertical"
        >

        <EditText
            android:id="@+id/cggz_edit"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@null"
            android:textSize="14dp"
            android:gravity="top"
            android:layout_weight="1"
            android:maxLength="200"
            />

        <TextView
            android:id="@+id/cggz_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="剩余字数：200"
            android:layout_marginRight="10dp"
            android:layout_gravity="right"
            />
    </LinearLayout>



    <RelativeLayout
        android:id="@+id/cggz_xiayibu"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/login_rounded_corners">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="提交"
            android:textColor="#ffffff"
            android:textSize="16sp"/>

    </RelativeLayout>
</LinearLayout>
</ScrollView>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    >

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/white">

            <TextView
                android:id="@+id/top_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="成为推广运营专员"
                android:textColor="#000000"
                android:layout_marginTop="10dp"
                android:textSize="17sp" />
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:id="@+id/icon_top"
                android:layout_below="@+id/top_text">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="172dp"
                    android:src="@mipmap/banner_bg" />
                <TextView
                    android:layout_width="102dp"
                    android:layout_height="34dp"
                    android:id="@+id/lj_join"
                    android:text=""
                    android:gravity="center"
                    android:layout_marginTop="115dp"
                    android:layout_marginLeft="40dp"

                    />
            </RelativeLayout>
            <LinearLayout
                android:id="@+id/tu_zhong"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/icon_top"
                android:layout_margin="12dp"
                android:orientation="vertical"
                android:background="@color/bg_bg">
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:layout_marginTop="13dp"
                        android:id="@+id/text_gw"
                        android:textColor="@color/text_top"
                        android:textStyle="bold"
                        android:layout_marginLeft="12dp"
                        android:text="月薪轻松过万"/>
                    <TextView
                        android:layout_width="154dp"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/text_gw"
                        android:layout_marginTop="4dp"
                        android:layout_marginLeft="12dp"
                        android:textColor="@color/text_top"
                        android:text="场馆入驻“找对手”后，200元奖励+提成(场地费利润20%)归您所有，月薪轻松过万。"
                        android:textSize="12sp"
                        />
                    <ImageView
                        android:layout_width="152dp"
                        android:layout_height="100dp"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:layout_marginTop="11dp"
                        android:layout_marginRight="12dp"
                        android:layout_alignParentRight="true"
                        android:src="@mipmap/tu1"/>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="13dp">
                    <TextView
                        android:layout_width="154dp"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:id="@+id/text_zz"
                        android:textColor="@color/text_top"
                        android:textStyle="bold"
                        android:layout_marginTop="13dp"
                        android:layout_marginRight="12dp"
                        android:layout_alignParentRight="true"
                        android:text="专职、兼职均可"/>
                    <TextView
                        android:layout_width="154dp"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/text_zz"
                        android:layout_marginTop="4dp"
                        android:layout_marginRight="12dp"
                        android:layout_alignParentRight="true"
                        android:textColor="@color/text_top"
                        android:text="您可以专职、兼职开展推广工作，让身边的场馆入职到“找对手”。"
                        android:textSize="12sp"
                        />
                    <ImageView
                        android:layout_width="152dp"
                        android:layout_height="100dp"
                        android:layout_gravity="center"
                        android:gravity="center"

                        android:layout_marginTop="11dp"
                        android:src="@mipmap/tu2"/>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="13dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:id="@+id/text_wb"
                        android:textColor="@color/text_top"
                        android:textStyle="bold"
                        android:layout_marginTop="13dp"
                        android:layout_marginLeft="12dp"
                        android:text="无任何成本"/>
                    <TextView
                        android:layout_width="154dp"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/text_wb"
                        android:layout_marginTop="4dp"
                        android:layout_marginLeft="12dp"
                        android:textColor="@color/text_top"
                        android:text="注册申请通过后，就可以让您身边的场馆入驻到“找对手”了，没有任何成本。"
                        android:textSize="12sp"
                        />
                    <ImageView
                        android:layout_width="152dp"
                        android:layout_height="100dp"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:layout_marginRight="12dp"
                        android:layout_marginTop="11dp"
                        android:layout_alignParentRight="true"
                        android:src="@mipmap/tu3"/>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="13dp">
                    <TextView
                        android:layout_width="154dp"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:id="@+id/text_sr"
                        android:textColor="@color/text_top"
                        android:textStyle="bold"
                        android:layout_marginTop="13dp"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="12dp"
                        android:text="收入提成随时看"/>
                    <TextView
                        android:layout_width="154dp"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/text_sr"
                        android:layout_marginTop="4dp"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="12dp"
                        android:textColor="@color/text_top"
                        android:text="随时随地查看您引入场馆的每一笔订单给您带来的提成，让您安心、放心。"
                        android:textSize="12sp"
                        />
                    <ImageView
                        android:layout_width="152dp"
                        android:layout_height="100dp"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:layout_marginRight="12dp"
                        android:layout_marginTop="11dp"

                        android:src="@mipmap/tu4"/>
                </RelativeLayout>

            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="68dp"
                android:layout_below="@id/tu_zhong"
                android:layout_gravity="center"
                android:background="@color/white"
                android:gravity="center">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:id="@+id/lj_join2"
                    android:layout_gravity="center"
                    android:layout_marginLeft="24dp"
                    android:layout_marginRight="24dp"
                    android:background="@drawable/bg_lj"
                    android:gravity="center"
                    android:text="立即加入"
                    android:textColor="@color/white"
                    android:textSize="17sp" />
            </RelativeLayout>
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>
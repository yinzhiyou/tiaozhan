<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    tools:context=".Home.FenXiangActivity">

    <include layout="@layout/layout_tab"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="188dp"
        android:background="@mipmap/fenxiangbeijing"
        >

    </RelativeLayout>


<RelativeLayout
    android:layout_width="166dp"
    android:layout_height="28dp"
    android:background="@mipmap/mashangfenxiang"
    android:layout_gravity="center"
    android:layout_marginTop="50dp"
    >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="马上分享"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        android:layout_centerInParent="true"

        />

</RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="分享app可获得2枚通用金币"
        android:textColor="#FF333333"
        android:textSize="14dp"
        android:layout_gravity="center"
        android:layout_marginTop="34dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="成功邀请好友注册双方均获得10枚通用金币"
        android:textColor="#FF333333"
        android:textSize="14dp"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        />



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="52dp"
        >

        <LinearLayout
            android:id="@+id/fenxian_weixin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1"
            >

            <ImageView
                android:layout_width="38dp"
                android:layout_height="38dp"
                android:background="@mipmap/weixin2"
                android:layout_gravity="center"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="微信"
                android:layout_gravity="center"
                android:layout_marginTop="14dp"
                />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/fenxiang_pengyouquan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1"
            >

            <ImageView
                android:layout_width="38dp"
                android:layout_height="38dp"
                android:background="@mipmap/weixinquan"
                android:layout_gravity="center"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="朋友圈"
                android:layout_gravity="center"
                android:layout_marginTop="14dp"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1"
            >

            <ImageView
                android:layout_width="38dp"
                android:layout_height="38dp"
                android:background="@mipmap/xinlang"
                android:layout_gravity="center"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="微博"
                android:layout_gravity="center"
                android:layout_marginTop="14dp"
                />

        </LinearLayout>
    </LinearLayout>
</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/beijing"
    xmlns:android="http://schemas.android.com/apk/res/android">



<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ratingbar="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginBottom="80dp"
    >

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/grtx_zhengti"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        android:focusableInTouchMode="true"
        android:orientation="vertical"
        tools:context=".Home.HomeGRTXActivity">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="260dp"

            android:background="@mipmap/grtx_beijing"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/layout_base_title_rl"
                android:layout_width="match_parent"
                android:layout_height="45dp">

                <ImageView
                    android:id="@+id/fanhui"
                    android:layout_width="40dp"
                    android:layout_height="20dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15dp"
                    android:src="@mipmap/fanhuijian" />

                <ImageView
                    android:id="@+id/grtx_jiahao"
                    android:layout_width="26dp"
                    android:layout_height="16dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="15dp"
                    android:src="@mipmap/cujiahao"
                    android:textSize="17sp" />


            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/layout_base_title_rl"
                android:layout_marginTop="10dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <com.example.android.promoter.Toos.CircleImageView
                        android:id="@+id/grtx_touxiang"
                        android:layout_width="85dp"
                        android:layout_height="85dp"
                        android:layout_marginLeft="40dp"
                        android:layout_marginRight="25dp"
                        android:background="@mipmap/home_vip_head"
                        android:scaleType="fitXY"

                        />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            >

                            <TextView
                                android:id="@+id/grtx_name"
                                android:layout_width="70dp"
                                android:layout_height="wrap_content"
                                android:text=""
                                android:ellipsize="end"
                                android:maxEms="6"
                                android:singleLine="true"

                                android:layout_centerVertical="true"
                                android:textColor="#FFFFFFFF"
                                android:textSize="14dp" />

                            <ImageView
                                android:id="@+id/grtx_xingbie"
                                android:layout_width="15dp"
                                android:layout_height="15dp"
                                android:layout_gravity="center"
                                android:layout_toRightOf="@id/grtx_name"
                                android:layout_centerVertical="true"
                                android:background="@mipmap/xingbie" />

                            <ImageView
                                android:id="@+id/grtx_qiu"
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:layout_centerVertical="true"
                                android:layout_toRightOf="@id/grtx_xingbie"
                                android:layout_marginLeft="20dp" />

                            <TextView
                                android:id="@+id/grtx_dengji"
                                android:layout_width="26dp"
                                android:layout_height="12dp"
                                android:layout_toRightOf="@id/grtx_qiu"
                                android:layout_marginLeft="20dp"
                                android:background="#FFF4C03D"
                                android:gravity="center"
                                android:text="Lv 2"
                                android:layout_centerVertical="true"
                                android:textColor="#ffffff"
                                android:textSize="10dp" />
                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"

                            android:layout_marginTop="4dp">

                            <TextView
                                android:layout_width="70dp"
                                android:layout_height="wrap_content"
                                android:text="对手币"
                                android:layout_centerVertical="true"
                                android:id="@+id/duishoubi"
                                android:textColor="#FFFFFFFF"
                                android:textSize="12dp" />

                            <TextView
                                android:id="@+id/grtx_jinbi"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="10000"
                                android:layout_centerVertical="true"
                                android:textColor="#FFFFFFFF"
                                android:layout_toRightOf="@id/duishoubi"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:textSize="12dp" />

                            <TextView
                                android:id="@+id/grtx_tyjb"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:text="对手币？"
                                android:layout_centerVertical="true"
                                android:layout_alignParentRight="true"
                                android:textColor="#FFFFFFFF"
                                android:layout_marginRight="12dp"
                                android:textSize="12dp" />

                        </RelativeLayout>


                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"

                            android:layout_marginTop="4dp">

                            <TextView
                                android:id="@+id/grtx_haopinglv"
                                android:layout_width="70dp"
                                android:layout_height="wrap_content"
                                android:text="好评率"
                                android:layout_centerVertical="true"
                                android:textColor="#FFFFFFFF"
                                android:textSize="12dp" />

                            <com.example.android.promoter.Toos.StarBar
                                android:id="@+id/starBar"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_toRightOf="@id/grtx_haopinglv"
                                ratingbar:starCount="5"
                                android:layout_centerVertical="true"
                                ratingbar:starDistance="5dp"

                                ratingbar:starEmpty="@mipmap/xingxinghei"
                                ratingbar:starFill="@mipmap/xingxinghuang"
                                ratingbar:starSize="12dp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/grade"
                                android:textColor="#FFFFFFFF"
                                android:layout_marginRight="12dp"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:layout_centerVertical="true"
                                android:textSize="12dp"
                                android:layout_alignParentRight="true"
                                android:text="4.0"/>
                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp">

                            <TextView
                                android:layout_width="70dp"
                                android:layout_height="wrap_content"
                                android:text="履约率"
                                android:id="@+id/lvyuelv"
                                android:layout_centerVertical="true"
                                android:textColor="#FFFFFFFF"
                                android:textSize="12dp" />

                            <TextView
                                android:id="@+id/grtx_lvyuelv"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_toRightOf="@id/lvyuelv"

                                android:text=""
                                android:textColor="#FFFFFFFF"
                                android:textSize="12dp" />

                        </RelativeLayout>


                    </LinearLayout>

                </LinearLayout>

                <GridView
                    android:id="@+id/grtx_gridview"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:numColumns="2"></GridView>
            </LinearLayout>
            <!--分割线-->
            <LinearLayout
                android:id="@+id/grtx_xiala"
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="30dp"
                android:layout_marginTop="30dp"
                android:background="#FF333333"
                android:orientation="vertical"
                android:visibility="gone">

                <LinearLayout
                    android:id="@+id/grtx_jiahaoyou"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/grtx_jiahaoyou_image"
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:layout_gravity="center"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="10dp"
                        android:background="@mipmap/jiahaoyou" />

                    <TextView
                        android:id="@+id/grtx_jiahaoyou_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="申请加好友"
                        android:textColor="#ffffff" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/grtx_guanzhu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/grtx_guanzhu_image"
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:layout_gravity="center"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="10dp"
                        android:background="@mipmap/guanzhu" />

                    <TextView
                        android:id="@+id/grtx_guanzhu_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="关注"
                        android:textColor="#ffffff" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/grtx_jiaheimingdan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:layout_gravity="center"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="10dp"
                        android:background="@mipmap/jiaheimingdan" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="加入黑名单"
                        android:textColor="#ffffff" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/home_grtx_jubao"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:layout_gravity="center"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="10dp"
                        android:background="@mipmap/jubao" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="举报"
                        android:textColor="#ffffff" />
                </LinearLayout>
            </LinearLayout>

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="34dp"
            android:background="#ffffff">

            <TextView
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:text="性别:" />

            <TextView
                android:id="@+id/grtx_sex_text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="2"
                android:text=""
                android:textColor="#FF333333" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:text="年龄:" />

            <TextView
                android:id="@+id/grtx_age"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="2"
                android:text=""
                android:textColor="#FF333333" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="34dp"
            android:background="#ffffff">

            <TextView
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:text="身高:" />

            <TextView
                android:id="@+id/grtx_shengao"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="2"
                android:text=""
                android:textColor="#FF333333" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:text="体重:" />

            <TextView
                android:id="@+id/grtx_tizhong"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="2"
                android:text=""
                android:textColor="#FF333333" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="3dp"
            android:paddingBottom="3dp"
            android:background="#ffffff">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:text="技术水平自我评定:"
                />

            <TextView
                android:id="@+id/grtx_xiaiyundong"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
               android:paddingLeft="10dp"
                android:text=""
                android:textColor="#FF333333" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="34dp"
            android:background="#ffffff">

            <TextView
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:text="常驻地:" />

            <TextView
                android:id="@+id/grtx_czd"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="2"
                android:text=""
                android:textColor="#FF333333" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:background="#E1E0E1">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center"
                android:text="运动项目"
                android:textColor="#FF333333"
                android:textSize="15dp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center"
                android:text="技术分"
                android:textColor="#FF333333"
                android:textSize="15dp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center"
                android:text="等级"
                android:textColor="#FF333333"
                android:textSize="15dp" />
        </LinearLayout>

        <com.example.android.promoter.Toos.MyListView
            android:id="@+id/grtx_list1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:divider="@null"></com.example.android.promoter.Toos.MyListView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="#ffffff"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="8dp"
                android:text="个人简介"
                android:textColor="#FF333333"
                android:textSize="15dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/grtx_jianjie"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="8dp"
                android:text="走自己的路让别人去说吧！喜欢结交各种打球的好朋友一起相约打球。"
                android:textColor="#FF333333"
                android:textSize="14dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:layout_marginTop="10dp"
            android:visibility="gone"
            android:background="#ffffff">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:text="精彩瞬间"
                android:textColor="#FF333333"
                android:textSize="15dp"
                android:layout_weight="1"
                android:textStyle="bold" />

            <ImageView
                android:layout_width="12dp"
                android:layout_height="18dp"
                android:background="@mipmap/youjiantou"
                android:layout_gravity="center"
                android:layout_marginRight="12dp"
                />
        </LinearLayout>

        <com.example.android.promoter.Toos.MyListView
            android:id="@+id/grtx_list2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2dp"
            android:visibility="gone"
            android:layout_marginTop="2dp"></com.example.android.promoter.Toos.MyListView>


    </LinearLayout>
</ScrollView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="#ffffff">

        <RelativeLayout
            android:id="@+id/grtx_fqtz"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="#D85D27">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="发起挑战"
                android:textColor="#ffffff"
                android:textSize="16sp" />

        </RelativeLayout>

    </LinearLayout>

</RelativeLayout>
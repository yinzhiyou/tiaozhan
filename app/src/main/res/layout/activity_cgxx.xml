<?xml version="1.0" encoding="utf-8"?>

<ScrollView android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:ratingbar="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:focusableInTouchMode="true"
    tools:context=".Home.CGXXActivity">

    <include
        layout="@layout/layout_tab"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <com.stx.xhb.xbanner.XBanner
        android:id="@+id/cgxx_banner"
        android:layout_width="match_parent"
        android:layout_height="200dp"

        />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="#ffffff"
        android:orientation="vertical">

        <TextView
            android:id="@+id/cgxx_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="天天羽毛球馆"
            android:textColor="#FF333333"
            android:textSize="16dp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/cgxx_zongti"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="12dp"
                android:text="总体"
                android:textColor="#FF333333"
                android:textSize="14dp" />




            <com.example.android.promoter.Toos.StarBar
                android:id="@+id/cgxx_star"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                ratingbar:starCount="5"
                ratingbar:starDistance="5dp"
                ratingbar:starEmpty="@mipmap/xingxinghei"
                ratingbar:starFill="@mipmap/xingxinghuang"
                android:clickable="false"
                ratingbar:starSize="16dp"

                android:layout_toRightOf="@id/cgxx_zongti"/>

            <TextView
                android:id="@+id/cgxx_xing"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="4分"
                android:textColor="#FF9B9B9B"
                android:textSize="14dp"
                android:layout_toRightOf="@id/cgxx_star"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="true"
                />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/cgxx_sheshi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="设施:5分"
                android:textColor="#FF9B9B9B"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/cgxx_fuwu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:text="服务:5分"
                android:textColor="#FF9B9B9B"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/cgxx_jiage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="12dp"
                android:layout_weight="1"
                android:text="价格:5分"
                android:textColor="#FF9B9B9B"
                android:textSize="14dp" />

            <RelativeLayout
                android:id="@+id/cgxx_yuding"
                android:layout_width="50dp"
                android:layout_height="22dp"
                android:layout_gravity="center"
                android:layout_marginRight="12dp"
                android:background="@drawable/zhifu_cg_yuanjiao">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="预定"
                    android:textColor="#FFFFFFFF"
                    android:textSize="12dp" />
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginTop="2dp"
        android:background="#ffffff">

        <ImageView
            android:layout_width="10dp"
            android:layout_height="12dp"
            android:layout_gravity="center"
            android:layout_marginLeft="12dp"
            android:background="@mipmap/dingwei" />

        <TextView
            android:id="@+id/cgxx_dizhi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="8dp"
            android:layout_weight="1"
            android:text="滨河中路甲2号第一大街908号"
            android:textColor="#FF333333"
            android:textSize="14dp" />

        <View
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="6dp"
            android:layout_marginTop="6dp"
            android:background="#E1E0E1"></View>

        <ImageView
            android:id="@+id/cgxx_list_dianhua"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_gravity="center"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@mipmap/dianhua" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:layout_marginTop="2dp"
        android:background="#ffffff"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="12dp"
            android:text="运动项目："
            android:textColor="#FF333333"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/cgxx_ydxm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="篮球"
            android:textColor="#FF9B9B9B"
            android:textSize="14dp" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:background="#ffffff"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="12dp"
            android:text="服务设施："
            android:textColor="#FF333333"
            android:textSize="14dp" />

       <ImageView
           android:layout_width="17dp"
           android:layout_height="14dp"
           android:background="@mipmap/wifihong"
           android:layout_gravity="center"
           />
        <ImageView
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:background="@mipmap/tingchehong"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            />
        <ImageView
            android:layout_width="13dp"
            android:layout_height="16dp"
            android:background="@mipmap/linyuhong"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/cgxx_pingjia"
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:orientation="horizontal"
        android:background="#ffffff"
        android:layout_marginTop="10dp"
        >
        <TextView
            android:id="@+id/cgxx_gengduo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" "
            android:textColor="#FF333333"
            android:textSize="16dp"
            android:layout_gravity="center"
            android:layout_marginLeft="12dp"
            android:layout_weight="1"
            />

        <ImageView
            android:layout_width="12dp"
            android:layout_height="18dp"
            android:background="@mipmap/youjiantou"
            android:layout_gravity="center"
            android:layout_marginRight="12dp"
            />
    </LinearLayout>

    <com.example.android.promoter.Toos.MyListView
        android:id="@+id/cgxx_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="2dp"
        >

    </com.example.android.promoter.Toos.MyListView>

</LinearLayout>
</ScrollView>
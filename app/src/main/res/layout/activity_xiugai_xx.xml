<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#ffffff"
    tools:context=".Denglu.XiugaiXXActivity">


    <include layout="@layout/layout_tab"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#E1E0E1"
        ></View>
    <EditText
        android:id="@+id/xiugai_xx_edit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="内容填写"
        android:textSize="16dp"
        android:textColorHint="#999999"
        android:background="@null"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="12dp"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#E1E0E1"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        ></View>
    <TextView
        android:id="@+id/xiugai_xx_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="好的名字可以让你的朋友更容易的记住你奥~"
        android:textSize="12dp"
        android:textColor="#9B9B9B"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="12dp"
        />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/xiugai_grid"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:numColumns="3"
        android:visibility="gone"
        >
    </androidx.recyclerview.widget.RecyclerView>
</LinearLayout>
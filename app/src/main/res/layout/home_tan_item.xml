<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    android:descendantFocusability="blocksDescendants"
    android:background="@drawable/tan_bg"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/image_tou"
            android:orientation="vertical">

            <com.example.android.tiaozhan.Toos.CustomRoundAngleImageView
                android:id="@+id/home_tan_list_touxiang"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="11dp"
                android:background="@mipmap/home_vip_head"
                android:scaleType="fitXY" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/home_tan_list_image_qiulei"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="14dp"
                    android:layout_marginTop="4dp"
                    android:background="@mipmap/qiulei" />

                <TextView
                    android:id="@+id/home_tan_list_dengji"
                    android:layout_width="26dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/lv_bg"
                    android:gravity="center"
                    android:text="Lv 2"
                    android:textColor="#ffffff"
                    android:textSize="10dp" />

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/image_tou"
            android:layout_marginTop="11dp"
            android:layout_marginLeft="8dp"


            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/home_tan_list_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="一生有你"
                    android:textColor="#000000"
                    android:textSize="14dp" />

                <ImageView
                    android:id="@+id/home_tan_list_sex"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="4dp"
                    android:background="@mipmap/xingbie" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/home_tan_list_moshi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="娱乐模式"
                    android:textColor="#D85D27"
                    android:textSize="12dp" />

                <TextView
                    android:id="@+id/home_tan_list_qiulei"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="篮球"
                    android:textSize="12dp" />

                <TextView
                    android:id="@+id/home_tan_list_renshu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="5V5"
                    android:textSize="12dp" />
                <!--<TextView-->
                <!--android:id="@+id/home_list_queren"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:text="缺1人"-->
                <!--android:layout_weight="1"-->
                <!--android:textSize="12dp"-->
                <!--/>-->

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/home_tan_list_time1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="2018-09-09"
                    android:textSize="12dp" />

                <TextView
                    android:id="@+id/home_tan_list_time2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="星期三"
                    android:textSize="12dp" />

                <TextView
                    android:id="@+id/home_tan_list_time3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="15:00-16:00"
                    android:textSize="12dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/home_tan_list_dizhi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="北京市海淀区软件园三区"
                    android:textSize="12dp" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_weight="1"
                android:visibility="gone">

                <TextView
                    android:id="@+id/home_list_fangshi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="场地费：AA"
                    android:textSize="12dp" />

                <TextView
                    android:id="@+id/home_list_feiyong"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="打赏费：40元/小时"
                    android:textSize="12dp" />

            </LinearLayout>


        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/home_tan_list_zhuangtai"
                android:layout_width="46dp"
                android:layout_height="41dp"
                android:layout_gravity="right"
                android:background="@mipmap/daichufa" />

            <TextView
                android:id="@+id/home_list_juli"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:ellipsize="end"
                android:gravity="bottom"
                android:paddingBottom="17dp"
                android:singleLine="true"
                android:text="2km"
                android:textSize="12dp"
                android:visibility="gone" />
        </LinearLayout>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tan_fan_layout"
        android:layout_marginLeft="74dp"
        android:layout_marginTop="5dp"
        android:visibility="gone"
        >

        <TextView
            android:id="@+id/home_tan_list_fank"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/hongsex"
            android:text=""
            android:textSize="12dp" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal">

        <View
            android:layout_width="wrap_content"
            android:layout_height="27dp"
            android:layout_weight="1"></View>

        <RelativeLayout
            android:id="@+id/home_tan_list_no"
            android:layout_width="70dp"
            android:layout_height="27dp"
            android:layout_gravity="right"
            android:layout_marginRight="12dp"
            android:background="@drawable/login_rounded_corners"
            android:visibility="gone">

            <TextView
                android:id="@+id/home_tan_list_anniu_no"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="不同意"
                android:textColor="#ffffff"
                android:textSize="12dp" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/home_tan_list_yes"
            android:layout_width="70dp"
            android:layout_height="27dp"
            android:layout_gravity="right"
            android:layout_marginRight="12dp"
            android:background="@drawable/login_rounded_corners"
            android:visibility="gone">

            <TextView
                android:id="@+id/home_tan_list_anniu_yes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="同意"
                android:textColor="#ffffff"
                android:textSize="12dp" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/home_tan_list_anniu"
            android:layout_width="124dp"
            android:layout_height="27dp"
            android:layout_gravity="right"
            android:layout_marginRight="12dp"
            android:background="@drawable/login_rounded_corners">

            <TextView
                android:id="@+id/home_tan_list_anniu_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="签到"
                android:textColor="#ffffff"
                android:textSize="12dp" />

        </RelativeLayout>
    </LinearLayout>
</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".My.MyTIxianActivity"

    android:fitsSystemWindows="true" >
    <include layout="@layout/layout_tab"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ffffff"
        android:layout_marginTop="12dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginBottom="50dp"
        android:backgroundTint="#ffffff"
        android:orientation="vertical"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="到账银行卡"
                android:textColor="#FF000000"
                android:textSize="16dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="22dp"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >

                <ListView
                    android:id="@+id/tixian_yhk"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:divider="@null"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    >

                </ListView>
                <TextView
                    android:id="@+id/my_tixian_jiaka"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="+ 新增卡号"
                    android:textColor="#FF9B9B9B"
                    android:textSize="15dp"
                    android:layout_marginLeft="40dp"
                    android:layout_marginTop="22dp"
                    />
            </LinearLayout>

        </LinearLayout>


        <View
            android:layout_width="wrap_content"
            android:layout_height="10dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="14dp"
            android:background="#F7F7F7"
            ></View>


        <LinearLayout
            android:id="@+id/my_tixian_layout_wx"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="#ffffff"
            android:layout_marginTop="10dp"
            android:visibility="gone"
            >

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:background="@mipmap/weixin2"
                android:layout_gravity="center"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="提现到微信"
                android:textColor="#FF9B9B9B"
                android:textSize="14dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                />
            <ImageView
                android:id="@+id/my_tixian_weixin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@mipmap/duihaobai"
                android:layout_gravity="center"
                android:layout_marginRight="12dp"
                />
        </LinearLayout>

        <View
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:background="#F7F7F7"
            ></View>

        <LinearLayout
            android:id="@+id/my_tixian_layout_zfb"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="#ffffff"
            android:visibility="gone"
            >

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:background="@mipmap/zhifubao"
                android:layout_gravity="center"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"

                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="提现到支付宝"
                android:textColor="#FF9B9B9B"
                android:textSize="14dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                />
            <ImageView
                android:id="@+id/my_tixian_zhifubao"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@mipmap/duihaobai"
                android:layout_gravity="center"
                android:layout_marginRight="12dp"
                />
        </LinearLayout>
        <View
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:background="#F7F7F7"
            ></View>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="提现金额"
            android:textColor="#FF333333"
            android:textSize="16dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="16dp"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="¥  "
                android:textSize="24dp"
                android:textColor="#FF333333"
                android:layout_marginLeft="16dp"
                />

            <EditText
                android:id="@+id/my_tixian_jine"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#FF333333"
                android:textColorHint="#999999"
                android:hint="请输入金额"
                android:textSize="20dp"
                android:background="@null"
                android:phoneNumber="true"
                />
        </LinearLayout>

        <View
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:background="#F7F7F7"
            android:layout_marginTop="10dp"
            ></View>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="12dp"
            android:layout_marginLeft="16dp"
            >
            <TextView
                android:id="@+id/my_tixian_yue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="当前钱包余额520.00元，"
                android:textColor="#FF9B9B9B"
                android:textSize="14dp"
                />

            <TextView
                android:id="@+id/my_tixian_quanbu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="全部提现"
                android:textColor="#FFD85D27"
                android:textSize="14dp"
                />
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/my_tixian_tx"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="34dp"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:background="@drawable/login_rounded_corners">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="提现"
                android:textColor="#ffffff"
                android:textSize="16sp"/>

        </RelativeLayout>

    </LinearLayout>

</LinearLayout>
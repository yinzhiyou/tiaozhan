<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="100dp"
    android:orientation="horizontal"
    android:background="#ffffff"
    >


    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="1"
        >

        <TextView
            android:id="@+id/prom_dd_list_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="活动ID    123546"
            android:textColor="#FF333333"
            android:textSize="12dp"
            android:layout_marginLeft="26dp"
            android:layout_marginTop="10dp"
            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            >

            <ImageView
                android:layout_width="6dp"
                android:layout_height="6dp"
                android:background="@mipmap/hongdian2"
                android:layout_gravity="center"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="8dp"
                />

            <TextView
                android:id="@+id/prom_dd_list_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2019-07-12    15:00-16:00"
                android:textColor="#FF333333"
                android:textSize="12dp"
                />




        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            >

            <ImageView
                android:layout_width="6dp"
                android:layout_height="6dp"
                android:background="@mipmap/hongdian2"
                android:layout_gravity="center"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="8dp"
                />

            <TextView
                android:id="@+id/prom_dd_list_dizhi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="健龙森体育馆(土桥店)    篮球5V5"
                android:textColor="#FF333333"
                android:textSize="12dp"
                />




        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            >

            <ImageView
                android:layout_width="6dp"
                android:layout_height="6dp"
                android:background="@mipmap/hongdian2"
                android:layout_gravity="center"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="8dp"
                />

            <TextView
                android:id="@+id/prom_dd_list_feiyong"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="场地费¥100"
                android:textColor="#FF333333"
                android:textSize="12dp"
                android:layout_marginRight="6dp"
                />
            <TextView
                android:id="@+id/prom_dd_list_tcl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="提成20%"
                android:textColor="#FFD0021B"
                android:textSize="12dp"
                android:textStyle="bold"
                />



        </LinearLayout>

    </LinearLayout>


    <!--分割线-->

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <ImageView
            android:id="@+id/prom_dd_list_zhuangtai"
            android:layout_width="48dp"
            android:layout_height="42dp"
            android:background="@mipmap/daichufa"
            android:layout_gravity="right"

            />
        <TextView
            android:id="@+id/prom_dd_list_tcf"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:text="+20.00"
            android:textColor="#FFD0021B"
            android:textSize="18dp"
            android:textStyle="bold"
            android:layout_marginRight="12dp"
            android:gravity="bottom"
            android:layout_weight="1"
            android:layout_marginBottom="15dp"
            />

    </LinearLayout>



</LinearLayout>
                            android:textColor="#FFFFFFFF"
                            android:textSize="13dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/my_jinbi_renwu"
                        android:layout_width="wrap_content"
                        android:layout_height="80dp"
                        android:layout_marginRight="12dp"
                        android:layout_weight="1"

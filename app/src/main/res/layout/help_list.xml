<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/layout_home_details_problem_title_rl"
            android:layout_width="match_parent"
            android:layout_height="47dp">

            <TextView
                android:id="@+id/title_ont"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textColor="#000000"
                android:layout_marginLeft="15dp"
                android:layout_centerVertical="true"
                android:text="@string/app_name"/>

            <ImageView
                android:id="@+id/layout_home_details_problem_title_iv"
                android:layout_width="12dp"
                android:layout_height="7dp"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="15dp"
                android:background="@mipmap/xiajiantoutwo"/>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/layout_home_details_problem_content_rl"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/login_line"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="15dp">

            <TextView
                android:id="@+id/content_one"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:textSize="14sp"
                android:text="@string/app_name"
                android:textColor="@color/login_forget"/>

        </RelativeLayout>

        <View
            android:id="@+id/content_line"
            android:layout_marginTop="5dp"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/login_line"/>

    </LinearLayout>

</RelativeLayout>
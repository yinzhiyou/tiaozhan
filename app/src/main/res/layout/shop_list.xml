<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:Android="http://schemas.android.com/tools"
    android:orientation="vertical">


    <ImageView
        android:id="@+id/shop_list_image"
        android:layout_width="146dp"
        android:layout_height="118dp"
        android:layout_gravity="center"
        android:scaleType="fitXY"
        />

    <TextView
        android:id="@+id/shop_list_name"
        android:layout_width="146dp"
        android:layout_height="wrap_content"
        android:text="运动手环智能计步器智能健身…"
        android:textColor="#FF333333"
        android:textSize="10dp"
        android:layout_gravity="center"
        android:layout_marginTop="8dp"
        android:lines="2"
        android:ellipsize="end"
        />

    <LinearLayout
        android:layout_width="146dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="6dp"
        >
        <TextView
            android:id="@+id/shop_list_jiage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="300金币"
            android:textColor="#FF333333"
            android:textSize="10sp"
            android:layout_marginRight="10dp"
            />
        <TextView
            android:id="@+id/shop_list_shichangjiage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="¥299"
            android:textColor="#FF9B9B9B"
            android:textSize="10sp"

            />

    </LinearLayout>

    <TextView
        android:id="@+id/shop_list_lijiduihuan"
        android:layout_width="146dp"
        android:layout_height="wrap_content"
        android:text="立即兑换"
        android:textColor="#FFD85D27"
        android:textSize="10sp"
        android:layout_gravity="center"
        android:layout_marginTop="6dp"
        />
</LinearLayout>
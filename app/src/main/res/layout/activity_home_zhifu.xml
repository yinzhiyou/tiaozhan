<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:orientation="vertical"
    tools:context=".Home.HomeZhifuActivity">

    <include
        layout="@layout/layout_tab"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_marginTop="2dp"
        android:background="#ffffff"
        android:orientation="horizontal"

        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="12dp"
            android:layout_weight="1"
            android:text="本次活动需要预付总费用"
            android:textColor="#FF333333"
            android:textSize="17dp" />

        <TextView
            android:id="@+id/home_zhifu_feiyong"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginRight="12dp"
            android:text=""
            android:textColor="#FFD85D27"
            android:textSize="17sp" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:background="#ffffff"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/home_zhifu_changdifei_layout"
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="12dp"
                android:text="场地费"
                android:textColor="#FF333333"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/home_zhifu_changdifei"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="43dp"
                android:text="0"
                android:textColor="#FF333333"
                android:textSize="17sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="（预付）"
                android:textColor="#FF9B9B9B"
                android:textSize="14sp" />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/home_zhifu_dashangfei_layout"
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="12dp"
                android:text="打赏费"
                android:textColor="#FF333333"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/home_zhifu_dashangfei"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="42dp"
                android:text="0"
                android:textColor="#FF333333"
                android:textSize="17sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/home_zhifu_peilianfei_layout"
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="12dp"
                android:text="陪练费"
                android:textColor="#FF333333"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/home_zhifu_peilianfei"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="42dp"
                android:text="0"
                android:textColor="#FF333333"
                android:textSize="17sp" />
        </LinearLayout>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:background="#ffffff">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="12dp"
            android:text="费用说明"
            android:textColor="#FF333333"
            android:textSize="16dp" />

    </LinearLayout>


    <LinearLayout
        android:id="@+id/zhifu_cdf"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="10dp"
            android:text="场地费"
            android:textColor="#FF333333"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/zhifu_cdfshuoming"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="40dp"
            android:text="场地费的收费规则 费用说明场地费的收费规则 "
            android:textColor="#FF9B9B9B"
            android:textSize="12dp" />

    </LinearLayout>


    <LinearLayout
        android:id="@+id/zhifu_dsf"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="10dp"
            android:text="打赏费"
            android:textColor="#FF333333"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/zhifu_dsfshuoming"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="40dp"
            android:text="场地费的收费规则 费用说明场地费的收费规则 "
            android:textColor="#FF9B9B9B"
            android:textSize="12dp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/zhifu_plf"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="10dp"
            android:text="陪练费"
            android:textColor="#FF333333"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/zhifu_plfshuoming"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="40dp"
            android:text="场地费的收费规则 费用说明场地费的收费规则 "
            android:textColor="#FF9B9B9B"
            android:textSize="12dp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/home_zhifu_wx"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginTop="10dp"
        android:background="#ffffff">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="center"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:background="@mipmap/weixin2" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:text="微信支付"
            android:textColor="#FF9B9B9B"
            android:textSize="14dp" />

        <ImageView
            android:id="@+id/home_zhifu_image_wx"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginRight="12dp"
            android:background="@mipmap/duihaobai" />
    </LinearLayout>

    <!--分割线-->
    <LinearLayout
        android:id="@+id/home_zhifu_zfb"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginTop="1dp"
        android:background="#ffffff">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="center"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:background="@mipmap/zhifubao" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:text="支付宝支付"
            android:textColor="#FF9B9B9B"
            android:textSize="14dp" />

        <ImageView
            android:id="@+id/home_zhifu_image_zfb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginRight="12dp"
            android:background="@mipmap/duihaobai" />
    </LinearLayout>

    <!--分割线-->
    <LinearLayout
        android:id="@+id/home_zhifu_qb"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginTop="1dp"
        android:background="#ffffff"

        >

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="center"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:background="@mipmap/qianbao_hong" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:text="钱包支付"
            android:textColor="#FF9B9B9B"
            android:textSize="14dp" />

        <ImageView
            android:id="@+id/home_zhifu_image_qb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginRight="12dp"
            android:background="@mipmap/duihaobai" />

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/home_zhifu_queren"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:layout_marginTop="34dp"

        android:background="@drawable/login_rounded_corners">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="确定支付"
            android:textColor="#ffffff"
            android:textSize="16sp" />

    </RelativeLayout>


</LinearLayout>
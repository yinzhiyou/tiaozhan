<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#ffffff"
    tools:context=".Promoter.PromoterSSActivity">

    <include
        layout="@layout/layout_tab"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#E7E7E7"
        ></View>
    <LinearLayout
        android:id="@+id/promo_ss_yincang"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#F2F2F2 "
        android:visibility="gone"
        >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@mipmap/tanhao"
            android:layout_marginTop="12dp"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            />

        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="您提交“不属实”后，对方可以要求平台介入处理，如果平台核实后对方提交的问题属实，将会影响您的“投诉处理正确率”请务必客观严谨处理投诉问题。"
            android:textSize="12dp"
            android:layout_marginTop="6dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"

            />

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="说明：（选填）"
        android:layout_marginTop="14dp"
        android:layout_marginLeft="12dp"
        android:layout_marginBottom="14dp"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#E7E7E7"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        ></View>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="#ffffff"
        android:layout_marginRight="12dp"
        android:layout_marginTop="12dp"
        android:layout_marginLeft="12dp"
        android:layout_marginBottom="12dp"
        android:orientation="vertical"
        >

        <EditText
            android:id="@+id/yjfk_edit"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@null"
            android:hint="请填写说明"
            android:textSize="14dp"
            android:gravity="top"
            android:maxLength="200"
            android:layout_weight="1"
            />

        <TextView
            android:id="@+id/yjfk_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="剩余字数：200"
            android:layout_gravity="right"
            />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#E7E7E7"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        ></View>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="上传凭证"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="12dp"
        />

    <!--<ImageView-->
        <!--android:layout_width="76dp"-->
        <!--android:layout_height="76dp"-->
        <!--android:background="@mipmap/xiangji"-->
        <!--android:layout_marginTop="12dp"-->
        <!--android:layout_marginLeft="12dp"-->
        <!--/>-->

    <Button
        android:id="@+id/main_btn_record_sound"
        android:layout_width="260dp"
        android:layout_height="40dp"
        android:background="@drawable/luyin"
        android:layout_gravity="center"
        android:layout_marginTop="12dp"
        android:text="开始录音"
        android:elevation="2dp"
        />
    <Button
        android:id="@+id/main_btn_play_sound"
        android:layout_width="260dp"
        android:layout_height="40dp"
        android:text="播放录音"
        android:layout_gravity="center"
        android:elevation="2dp"
        android:background="@drawable/luyin"
        android:layout_marginTop="4dp"
        android:visibility="gone"
        />
    <TextView
        android:id="@+id/tousu_shanchu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="删除录音"
        android:textColor="#ff00"
        android:textSize="12dp"
        android:layout_gravity="center"
        android:layout_marginTop="6dp"
        android:visibility="gone"
        />
    <View
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        >

    </View>
    <LinearLayout
        android:id="@+id/hdxq_qiandao"
        android:layout_width="match_parent"
        android:layout_marginTop="34dp"
        android:layout_height="40dp"
        >


        <TextView
            android:id="@+id/promoter_ss_quxiao"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="取消"
            android:textColor="#ffffff"
            android:gravity="center"
            android:background="#D85D27 "
            android:layout_weight="1"
            android:layout_marginRight="1dp"
            />
        <TextView
            android:id="@+id/promoter_ss_tijiao"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="确认提交"
            android:textColor="#ffffff"
            android:gravity="center"
            android:background="#D85D27 "
            android:layout_weight="1"
            android:layout_marginLeft="1dp"
            />
    </LinearLayout>
</LinearLayout>
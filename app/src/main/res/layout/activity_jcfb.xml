<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Wonderful.JCFBActivity">

    <include layout="@layout/layout_tab"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>


    <EditText
        android:id="@+id/jcfb_edit"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="#ffffff"
        android:paddingLeft="12dp"
        android:layout_marginTop="1dp"
        android:hint="这一刻的想法。。。"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#ffffff"
        >

        <!--<ImageView-->
            <!--android:id="@+id/jcfb_xiangji"-->
            <!--android:layout_width="110dp"-->
            <!--android:layout_height="110dp"-->
            <!--android:background="@mipmap/dajiahao"-->
            <!--android:layout_marginLeft="12dp"-->
            <!--android:layout_marginTop="12dp"-->
            <!--android:scaleType="centerCrop"-->

            <!--/>-->
        <GridView
            android:id="@+id/jcfb_grid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:verticalSpacing="200dp"
            android:numColumns="3"
          />
        <RelativeLayout
            android:layout_width="200dp"
            android:layout_height="130dp"
            android:id="@+id/shipin_layout"
            android:visibility="gone"
            >

            <fm.jiecao.jcvideoplayer_lib.JCVideoPlayerStandard
                android:id="@+id/shipinshangchuan_video"
                android:layout_width="200dp"
                android:layout_height="130dp"
                android:layout_marginTop="4dp"
                android:layout_gravity="center"
                android:visibility="gone"
                />
            <ImageView
                android:id="@+id/jcfb_shanchu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@mipmap/chahao"
                android:layout_alignParentRight="true"
                android:layout_marginTop="2dp"
                android:layout_marginRight="2dp"
                />
        </RelativeLayout>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="添加图片/视频"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="12dp"
            />

    </LinearLayout>


    <!--分割线-->
    <LinearLayout
        android:id="@+id/jcfb_xiangmu"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginTop="1dp"
        android:background="#ffffff">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="12dp"
            android:layout_weight="1"
            android:text="运动项目"
            android:textColor="#FF333333"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/home_faqi_moshi_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginRight="10dp"
            android:text="全部"
            android:textColor="#FF9B9B9B"
            android:textSize="15dp" />

        <ImageView
            android:layout_width="11dp"
            android:layout_height="18dp"
            android:layout_gravity="center"
            android:layout_marginRight="12dp"
            android:background="@mipmap/youjiantou" />
    </LinearLayout>
    <!--分割线-->
    <LinearLayout
        android:id="@+id/jcfb_fanwei"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginTop="1dp"
        android:background="#ffffff">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="12dp"
            android:layout_weight="1"
            android:text="可视范围"
            android:textColor="#FF333333"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/jcfb_text_fanwei"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginRight="10dp"
            android:text="公开"
            android:textColor="#FF9B9B9B"
            android:textSize="15dp" />

        <ImageView
            android:layout_width="11dp"
            android:layout_height="18dp"
            android:layout_gravity="center"
            android:layout_marginRight="12dp"
            android:background="@mipmap/youjiantou" />
    </LinearLayout>
</LinearLayout>
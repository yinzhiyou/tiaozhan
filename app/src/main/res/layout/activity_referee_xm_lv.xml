<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include
        layout="@layout/layout_tab"

        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/huib"/>



    <!--分割线-->
    <LinearLayout
        android:id="@+id/referee_dj"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginTop="1dp"
        android:background="#ffffff">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="12dp"
            android:layout_weight="1"
            android:text="裁判项目等级"
            android:textColor="#FF333333"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/referee_dj_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginRight="10dp"
            android:text="请选择"
            android:textColor="#FF9B9B9B"
            android:textSize="15dp" />

        <ImageView
            android:layout_width="11dp"
            android:layout_height="18dp"
            android:layout_gravity="center"
            android:layout_marginRight="12dp"
            android:background="@mipmap/youjiantou" />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/huib"/>

    <!--分割线-->
    <LinearLayout
        android:id="@+id/referee_bh"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginTop="1dp"
        android:background="#ffffff">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="12dp"
            android:layout_weight="1"
            android:text="裁判证书编号"
            android:textColor="#FF333333"
            android:textSize="15dp" />

        <EditText
            android:id="@+id/referee_bh_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginRight="10dp"
            android:hint="请填写"
            android:background="@null"
            android:textColor="#FF9B9B9B"
            android:textSize="15dp" />

        <ImageView
            android:layout_width="11dp"
            android:layout_height="18dp"
            android:layout_gravity="center"
            android:layout_marginRight="12dp"
            android:background="@mipmap/youjiantou" />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/huib"/>


    <!--分割线-->
    <LinearLayout
        android:id="@+id/referee_pz"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginTop="1dp"
        android:background="#ffffff">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="12dp"
            android:layout_weight="1"
            android:text="裁判证书照片"
            android:textColor="#FF333333"
            android:textSize="15dp" />

        <ImageView
            android:id="@+id/referee_zp_icon"
            android:layout_width="40dp"
            android:layout_height="32dp"
            android:layout_gravity="center"
            android:layout_marginRight="10dp"
            android:background="@mipmap/icon_zp"

            />

        <ImageView
            android:layout_width="11dp"
            android:layout_height="18dp"
            android:layout_gravity="center"
            android:layout_marginRight="12dp"
            android:background="@mipmap/youjiantou" />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/huib"/>

    <RelativeLayout
        android:id="@+id/cp_tijiao"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginBottom="50dp"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:layout_marginTop="34dp"
        android:background="@drawable/login_rounded_corners">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="提交"
            android:textColor="#ffffff"
            android:textSize="16sp" />

    </RelativeLayout>
</LinearLayout>
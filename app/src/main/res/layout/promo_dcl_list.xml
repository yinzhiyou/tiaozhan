<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="#ffffff"
    android:layout_height="150dp">
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="3"
        >

        <ImageView
            android:id="@+id/promo_dcl_list_chuli"
            android:layout_width="42dp"
            android:layout_height="18dp"
            android:background="@mipmap/daichuli"

            />
        <com.example.android.tiaozhan.Toos.CustomRoundAngleImageView
            android:id="@+id/promo_dcl_list_touxiang"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:background="@mipmap/home_vip_head"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_gravity="center"
            android:scaleType="fitXY"
            />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <ImageView
                android:id="@+id/promo_dcl_list_image_qiulei"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@mipmap/qiulei"
                android:layout_marginLeft="18dp"
                android:layout_marginTop="4dp"
                />

            <TextView
                android:id="@+id/promo_dcl_list_dengji"
                android:layout_width="26dp"
                android:layout_height="12dp"
                android:background="#FFF4C03D"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="8dp"
                android:text="Lv 2"
                android:textSize="10dp"
                android:textColor="#ffffff"
                android:gravity="center"
                />

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_weight="6"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="16dp"
        >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            >
            <TextView
                android:id="@+id/promo_dcl_list_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="一生有你"
                android:textSize="14dp"
                android:textColor="#000000"
                />
            <ImageView
                android:id="@+id/home_list_sex"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@mipmap/xingbie"
                android:layout_gravity="center"
                android:layout_marginLeft="4dp"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            >
            <TextView
                android:id="@+id/promo_dcl_list_moshi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="娱乐模式"
                android:textColor="#D85D27"
                android:textSize="12dp"
                android:layout_weight="1"
                />
            <TextView
                android:id="@+id/promo_dcl_list_text_qiulei"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="篮球"
                android:layout_weight="1"
                android:textSize="12dp"
                />
            <TextView
                android:id="@+id/promo_dcl_list_renshu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5V5"
                android:layout_weight="1"
                android:textSize="12dp"
                />
            <TextView
                android:id="@+id/home_list_queren"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="缺1人"
                android:layout_weight="1"
                android:textSize="12dp"
                android:visibility="gone"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            >
            <TextView
                android:id="@+id/promo_dcl_list_time1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2018-09-09"
                android:layout_weight="1"
                android:textSize="12dp"
                />
            <TextView
                android:id="@+id/promo_dcl_list_time2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="星期三"
                android:layout_weight="1"
                android:textSize="12dp"
                />
            <TextView
                android:id="@+id/promo_dcl_list_time3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="15:00-16:00"
                android:layout_weight="1"
                android:textSize="12dp"
                />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            >
            <TextView
                android:id="@+id/promo_dcl_list_dizhi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="北京市海淀区软件园三区"
                android:layout_weight="1"
                android:textSize="12dp"
                />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            >
            <TextView
                android:id="@+id/promo_dcl_list_fangshi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="场地费：AA"
                android:textSize="12dp"
                />
            <TextView
                android:id="@+id/promo_dcl_list_feiyong"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="提成:20元"
                android:textColor="#FFD0021B"
                android:textSize="14dp"
                android:layout_marginLeft="6dp"
                />

        </LinearLayout>
    </LinearLayout>


    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_weight="1.5"
        >

        <ImageView
            android:id="@+id/promo_dcl_list_zhuangtai"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@mipmap/daichufa"
            android:layout_gravity="right"
            />


    </LinearLayout>
</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="#ffffff"
    android:descendantFocusability="blocksDescendants"
    >
    <com.mcxtzhang.swipemenulib.SwipeMenuLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clickable="true"
        android:paddingBottom="1dp">


        <LinearLayout
            android:id="@+id/xiaoxi_xt_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        >

        <TextView
            android:id="@+id/xiaoxi_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="匹配成功通知"
            android:textColor="#FF333333"
            android:textSize="16dp"
            android:textStyle="bold"
            android:layout_weight="1"
            android:layout_marginLeft="22dp"
            />

        <TextView
            android:id="@+id/xiaoxi_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2018-08-09 20:59"
            android:layout_marginRight="10dp"
            />
    </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >


                <ImageView
                    android:id="@+id/xiaoxi_hongdian"
                    android:layout_width="8dp"
                    android:layout_height="8dp"
                    android:background="@mipmap/hongdian2"
                    android:layout_gravity="center"
                    android:layout_marginLeft="4dp"
                    />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                >

                <ImageView
                    android:id="@+id/xiaoxi_touxiang"
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="12dp"
                    android:visibility="gone"
                    />
                <TextView
                    android:id="@+id/xiaoxi_neirong"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="您好，9月30日在“天天羽毛球馆”的“单打约伴”活动匹配成功，请大家做好准备。"
                    android:textColor="#FF9B9B9B"
                    android:textSize="14dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"

                    />

            </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"

                    ></TextView>
                <Button
                    android:id="@+id/xiaoxi_tongyi"
                    android:layout_width="60dp"
                    android:layout_height="30dp"
                    android:text="同意"
                    android:background="#D85D27"
                    android:textColor="#ffffff"
                    android:layout_gravity="center"
                    android:visibility="gone"
                    />
                <Button
                    android:id="@+id/xiaoxi_hulue"
                    android:layout_width="60dp"
                    android:layout_height="30dp"
                    android:text="忽略"
                    android:background="#D85D27"
                    android:layout_marginLeft="10dp"
                    android:textColor="#ffffff"
                    android:layout_margin="10dp"
                    android:layout_gravity="center"
                    android:visibility="gone"
                    />
                <TextView
                    android:id="@+id/xiaoxi_tishi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:layout_marginRight="12dp"
                    android:visibility="gone"
                    />
            </LinearLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/btnDelete"
            android:layout_width="74dp"
            android:layout_height="match_parent"
            android:background="#D85D27"
            android:text="删除"
            android:gravity="center"
            android:textColor="@android:color/white"/>

    </com.mcxtzhang.swipemenulib.SwipeMenuLayout>
</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:descendantFocusability="blocksDescendants"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="12dp"
        >
    <TextView
        android:id="@+id/my_jingcai_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="9月30日"
        android:textColor="#FF333333"
        android:textSize="15dp"
        android:textStyle="bold"
        android:layout_marginLeft="12dp"
        />

        <TextView
            android:id="@+id/my_jingcai_time2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="15:38"
            android:textColor="#FF9B9B9B"
            android:textSize="12dp"
            android:layout_marginLeft="12dp"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="12dp"
        >

        <TextView
            android:id="@+id/my_jingcai_neirong"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="场馆是打球里边最干净的场馆了，价格实惠，服务人员态度极好！"
            android:layout_marginTop="6dp"
            android:textColor="#FF333333"
            android:textSize="14dp"
            android:layout_marginRight="12dp"
            />

        <ImageView
            android:id="@+id/my_jingcai_image"
            android:layout_width="match_parent"
            android:layout_height="206dp"
            android:src="@mipmap/logo2x"
            android:layout_marginRight="12dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="14dp"
            android:scaleType="fitStart"
            android:visibility="gone"
            />
        <cn.jzvd.JZVideoPlayerStandard
            android:id="@+id/my_jingcai_list_video"
            android:layout_width="match_parent"
            android:layout_height="206dp"
            android:layout_marginRight="12dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="14dp"
            android:layout_gravity="center"
            android:visibility="gone"
            />
        <GridView
            android:id="@+id/my_jingcai_grid"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:numColumns="3"
            android:visibility="gone"
            android:layout_marginRight="12dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="14dp"
            >
        </GridView>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:layout_gravity="right"
            android:layout_marginRight="12dp"
            android:layout_marginBottom="14dp"
            >

            <ImageView
                android:layout_width="17dp"
                android:layout_height="17dp"
                android:background="@mipmap/pinglunshu"
                />
            <TextView
                android:id="@+id/my_jingcai_pinglunshu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="66"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="18dp"
                />

            <ImageView
                android:layout_width="17dp"
                android:layout_height="17dp"
                android:background="@mipmap/zan"
                />
            <TextView
                android:id="@+id/my_jingcai_dianzanshu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="66"
                android:layout_marginLeft="8dp"
                />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
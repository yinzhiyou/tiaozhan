<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#ffffff"
   >


    <include layout="@layout/layout_tab"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#4D9B9B9B"
        ></View>






    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@mipmap/icon_error"
        android:layout_gravity="center"
        android:layout_marginTop="54dp"
        android:layout_marginBottom="22dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="审核失败"
        android:textColor="#FF4A4A4A"
        android:textSize="16dp"
        android:layout_gravity="center"
        android:layout_marginBottom="50dp"
        />

    <LinearLayout
        android:layout_width="225dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        >
        <ImageView
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:background="@mipmap/judian2"
            />

        <View
            android:layout_width="90dp"
            android:layout_height="1dp"
            android:background="#D85D27"
            android:layout_gravity="center"
            ></View>
        <ImageView
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:background="@mipmap/judian2"
            />

        <View
            android:layout_width="90dp"
            android:layout_height="1dp"
            android:background="#D85D27"
            android:layout_gravity="center"
            ></View>
        <ImageView
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:background="@mipmap/judian2"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="45dp"
        android:layout_marginRight="45dp"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="提交"
            android:textColor="#FF4A4A4A"
            android:textSize="12dp"
            android:layout_weight="1"
            android:gravity="right"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="审核中"
            android:textColor="#FF4A4A4A"
            android:textSize="12dp"
            android:layout_weight="1"
            android:gravity="right"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="审核失败"
            android:textColor="#D0021B"
            android:textSize="12dp"
            android:layout_weight="1"
            android:gravity="center"
            />



    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#4D9B9B9B"
        android:layout_marginTop="27dp"
        ></View>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="76dp"
        android:layout_marginLeft="12dp"
        android:gravity="center">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:id="@+id/text_left"
        android:textColor="#4A4A4A"
        android:text="抱歉，您上传的身份证照片不符合要求，请"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#D85D27"
        android:id="@+id/again_text1"
        android:text="重新上传！"
        android:layout_toRightOf="@+id/text_left"
        android:textSize="14sp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#D85D27"
            android:id="@+id/chakan_text"
            android:text="查看上传要求"
           android:layout_below="@+id/text_left"
            android:layout_marginTop="7dp"
            android:textSize="14sp"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#4D9B9B9B"

        ></View>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="您提交的信息如下"
        android:textColor="#FF4A4A4A"
        android:textSize="14dp"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="12dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="真实姓名        啊啊啊"
        android:id="@+id/name_zs"
        android:textColor="#FF4A4A4A"
        android:textSize="14dp"
        android:layout_marginTop="6dp"
        android:layout_marginLeft="12dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="证件类型        身份证"
        android:textColor="#FF4A4A4A"
        android:textSize="14dp"
        android:layout_marginTop="6dp"
        android:layout_marginLeft="12dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="证件号码        110**************7878"
        android:id="@+id/num_sfz"
        android:textColor="#FF4A4A4A"
        android:textSize="14dp"
        android:layout_marginTop="6dp"
        android:layout_marginLeft="12dp"
        />
<TextView
    android:layout_width="match_parent"
    android:layout_height="40dp"
    android:gravity="center"
    android:id="@+id/again_text"
    android:layout_marginTop="20dp"
    android:layout_marginLeft="24dp"
    android:layout_marginRight="24dp"
    android:textColor="@color/white"
    android:background="@drawable/btn_bg_selector"
    android:text="重新上传"/>
</LinearLayout>
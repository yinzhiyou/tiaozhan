<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="168dp"
    android:background="#ffffff"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:orientation="vertical">

            <com.example.android.promoter.Toos.CustomRoundAngleImageView
                android:id="@+id/my_hd_list_touxiang"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginLeft="14dp"
                android:layout_marginTop="20dp"
                android:background="@mipmap/logo2x"
                android:scaleType="fitXY" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/my_hd_list_image_qiu"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="18dp"
                    android:layout_marginTop="4dp"
                    android:background="@mipmap/qiulei" />

                <TextView
                    android:id="@+id/my_hd_list_dengji"
                    android:layout_width="26dp"
                    android:layout_height="12dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="8dp"
                    android:background="#FFF4C03D"
                    android:gravity="center"
                    android:text="Lv 2"
                    android:textColor="#ffffff"
                    android:textSize="10dp" />

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="16dp"
            android:layout_marginTop="20dp"
            android:layout_weight="6"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/my_hd_list_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="一生有你"
                    android:textColor="#000000"
                    android:textSize="14dp" />

                <ImageView
                    android:id="@+id/my_hd_list_sex"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="4dp"
                    android:background="@mipmap/xingbie" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/my_hd_list_moshi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="娱乐模式"
                    android:textColor="#D85D27"
                    android:textSize="12dp" />

                <TextView
                    android:id="@+id/my_hd_list_text_qiu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="篮球"
                    android:textSize="12dp" />

                <TextView
                    android:id="@+id/my_hd_list_renshu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="5V5"
                    android:textSize="12dp" />

                <TextView
                    android:id="@+id/my_hd_list_queren"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="缺1人"
                    android:textSize="12dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/my_hd_list_time1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="2018-09-09"
                    android:textSize="12dp" />

                <TextView
                    android:id="@+id/my_hd_list_time2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="星期三"
                    android:textSize="12dp" />

                <TextView
                    android:id="@+id/my_hd_list_time3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="15:00-16:00"
                    android:textSize="12dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/my_hd_list_dizhi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="北京市海淀区软件园三区"
                    android:textSize="12dp" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/my_hd_list_fangshi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="场地费：AA"
                    android:textSize="12dp" />

                <TextView
                    android:id="@+id/my_hd_list_dashang"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="打赏费：40元/小时"
                    android:textSize="12dp" />

            </LinearLayout>
        </LinearLayout>


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.5"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/my_hd_list_zhuangtai"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="right"
                android:background="@mipmap/daichufa" />


        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/cg_ydz"
        android:layout_marginTop="8dp">

        <TextView
            android:id="@+id/my_hd_list_tousuzhong"
            android:layout_width="50dp"
            android:layout_height="20dp"
            android:layout_gravity="center"
            android:layout_marginLeft="50dp"
            android:background="@drawable/shuying_4"
            android:gravity="center"
            android:text="投诉中"
            android:textColor="#D85D27"
            android:textSize="12dp"
            android:visibility="gone" />

        <View
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:layout_weight="1"></View>

        <RelativeLayout
            android:id="@+id/my_hd_list_dianji"
            android:layout_width="80dp"
            android:layout_height="24dp"
            android:layout_marginRight="12dp"
            android:background="@drawable/zhifu_cg_yuanjiao">

            <TextView
                android:id="@+id/my_hd_list_text_dianji"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="取消报名"
                android:textColor="#ffffff"
                android:textSize="12dp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/my_hd_list_dianji2"
            android:layout_width="80dp"
            android:layout_height="24dp"
            android:layout_marginRight="12dp"
            android:background="@drawable/zhifu_cg_yuanjiao"
            android:visibility="gone">

            <TextView
                android:id="@+id/my_hd_list_text_dianji2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="签到"
                android:textColor="#ffffff"
                android:textSize="12dp" />
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>
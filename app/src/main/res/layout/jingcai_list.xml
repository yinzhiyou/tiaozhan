<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="#ffffff"
    android:layout_height="match_parent"
    android:descendantFocusability="blocksDescendants"
    >


    <com.example.android.promoter.Toos.CustomRoundAngleImageView
        android:id="@+id/jingcai_touxiang"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:background="@mipmap/logo2x"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="12dp"
        android:scaleType="fitXY"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="12dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/jingcai_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="带着篮球去撒野"
                android:textColor="#FF333333"
                android:textSize="16dp"
                />
            <TextView
                android:id="@+id/jingcai_qiulei"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="（足球）"
                android:textColor="#FF9B9B9B"
                android:textSize="12dp"
                android:layout_gravity="center"
                android:layout_weight="1"/>
            <TextView
                android:id="@+id/my_jingcai_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="9月20日"
                android:textColor="#FF9B9B9B"
                android:textSize="12dp"
                android:layout_marginRight="12dp"
                />

        </LinearLayout>



        <TextView
            android:id="@+id/jingcai_neirong"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="场馆是打球里边最干净的场馆了，价格实惠，服务人员态度极好！"
            android:layout_marginTop="6dp"
            android:textColor="#FF333333"
            android:textSize="14dp"
            android:layout_marginRight="12dp"
            />
        <GridView
            android:id="@+id/jingcai_grid"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="14dp"
            android:layout_marginRight="12dp"
            android:layout_marginTop="10dp"
            android:numColumns="3"
            android:visibility="gone"></GridView>
        <!--<fm.jiecao.jcvideoplayer_lib.JCVideoPlayerStandard-->
            <!--android:id="@+id/jingcai_list_video"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="206dp"-->
            <!--android:layout_marginRight="12dp"-->
            <!--android:layout_marginTop="10dp"-->
            <!--android:layout_marginBottom="14dp"-->
            <!--android:layout_gravity="center"-->
            <!--android:visibility="gone"-->
            <!--/>-->

        <cn.jzvd.JZVideoPlayerStandard
            android:id="@+id/jingcai_list_video"
            android:layout_width="match_parent"
            android:layout_height="206dp"
            android:layout_marginRight="12dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="14dp"
            android:layout_gravity="center"
            android:visibility="gone"
            />
        <ImageView
            android:id="@+id/jingcai_imae"
            android:layout_width="match_parent"
            android:layout_height="206dp"
            android:layout_marginRight="12dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="14dp"
            android:scaleType="fitStart"
            android:visibility="gone"
            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:layout_gravity="right"
            android:layout_marginRight="12dp"
            android:layout_marginBottom="14dp"
            >

            <ImageView
                android:layout_width="17dp"
                android:layout_height="17dp"
                android:background="@mipmap/pinglunshu"
                />
            <TextView
                android:id="@+id/jingcai_pinglun"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="18dp"
                />

            <ImageView
                android:id="@+id/jingcai_zan"
                android:layout_width="17dp"
                android:layout_height="17dp"
                />
            <TextView
                android:id="@+id/jingcai_dianzai"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:layout_marginLeft="8dp"
                />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
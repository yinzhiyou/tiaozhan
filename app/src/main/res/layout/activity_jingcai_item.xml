<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true"
    android:fitsSystemWindows="true"
    android:focusable="true"
    tools:context=".Wonderful.JingcaiItemActivity">

    <include
        android:id="@+id/jingcai_item_biaoti"
        layout="@layout/layout_tab"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        android:layout_below="@id/jingcai_item_biaoti"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/jingcai_item_layout1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:background="#ffffff"

            android:orientation="horizontal">

            <com.example.android.promoter.Toos.XCRoundImageView
                android:id="@+id/my_jingcai_item_touxiang"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="12dp"
                android:background="@mipmap/home_vip_head" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="12dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/my_jingcai_item_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="带着篮球去撒野"
                        android:textColor="#FF333333"
                        android:textSize="16dp"

                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:text="（足球）"
                        android:textColor="#FF9B9B9B"
                        android:textSize="12dp" />

                    <TextView
                        android:id="@+id/my_jingcai_item_riqi"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="12dp"
                        android:text="9月20日"
                        android:textColor="#FF9B9B9B"
                        android:textSize="12dp" />

                </LinearLayout>


                <TextView
                    android:id="@+id/my_jingcai_item_neirong"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="12dp"
                    android:layout_marginTop="6dp"
                    android:text="场馆是打球里边最干净的场馆了，价格实惠，服务人员态度极好！"
                    android:textColor="#FF333333"
                    android:textSize="14dp" />

                <ImageView
                    android:id="@+id/my_jingcai_item_image"
                    android:layout_width="match_parent"
                    android:layout_height="206dp"
                    android:layout_marginBottom="14dp"
                    android:layout_marginRight="12dp"
                    android:layout_marginTop="10dp"
                    android:background="@mipmap/logo2x" />

                <GridView
                    android:id="@+id/my_jingcai_item_grid"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="14dp"
                    android:layout_marginRight="12dp"
                    android:layout_marginTop="10dp"
                    android:numColumns="3"
                    android:visibility="gone"></GridView>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginBottom="14dp"
                    android:layout_marginRight="12dp"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="17dp"
                        android:layout_height="17dp"
                        android:background="@mipmap/pinglunshu" />

                    <TextView
                        android:id="@+id/my_jingcai_item_pinglunshu"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="18dp"
                        android:text="66" />

                    <ImageView
                        android:layout_width="17dp"
                        android:layout_height="17dp"
                        android:background="@mipmap/zan" />

                    <TextView
                        android:id="@+id/my_jingcai_item_dianzanshu"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8dp"
                        android:text="66" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>


        <LinearLayout
            android:id="@+id/jingcai_item_layout2"
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:layout_marginTop="10dp"
            android:background="#ffffff">

            <TextView
                android:id="@+id/my_jingcai_item_pinglunshu2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="12dp"
                android:text="评论  12"
                android:textColor="#FF333333"
                android:textSize="16dp" />

        </LinearLayout>

        <!--分割线-->
        <com.example.android.promoter.Toos.MyListView
            android:id="@+id/my_jingcai_item_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="50dp"
            android:layout_marginTop="1dp"
            android:background="#ffffff"
            android:divider="#f6f6f6"
            android:dividerHeight="1dp" />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/rl_comment"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:background="#f6f6f6"
        android:orientation="horizontal">


        <EditText
            android:id="@+id/comment_content"
            android:layout_width="0dp"
            android:layout_height="34dp"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:background="#ffffff"
            android:hint="请输入评论内容~"
            android:singleLine="true"
            android:textSize="15sp"

            />

        <Button
            android:id="@+id/comment_send"
            android:layout_width="50dp"
            android:layout_height="35dp"
            android:layout_alignParentRight="true"
            android:layout_margin="5dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="10dp"
            android:text="发送"
            android:textColor="#ffffff"
            android:textSize="13sp" />
    </LinearLayout>
</RelativeLayout>

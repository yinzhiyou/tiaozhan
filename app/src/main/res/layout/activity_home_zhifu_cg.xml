<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Home.HomeZhifuCGActivity">

    <include
        layout="@layout/layout_tab"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="174dp"
        android:background="@mipmap/zhifuchenggongbeijing1"
        >

        <ImageView
            android:layout_width="62dp"
            android:layout_height="62dp"
            android:background="@mipmap/zhifuchenggongbeijing2"
            android:layout_centerInParent="true"
            />

    </RelativeLayout>

    <TextView
        android:id="@+id/CG_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="报名成功"
        android:textColor="#FF333333"
        android:textSize="18dp"
        android:layout_marginTop="30dp"
        android:layout_gravity="center"
        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="30dp"
        android:layout_gravity="center"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="分享即可获得一个对手币"
            android:textColor="#FF333333"
            android:textSize="14dp"/>

        <TextView
            android:id="@+id/CG_tyjb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="对手币？"
            android:textColor="#FF9B9B9B"
            android:textSize="12sp"
            android:layout_marginLeft="10dp"
            />

    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_gravity="center"
        >

        <RelativeLayout
            android:id="@+id/CG_xiangqing"
            android:layout_width="110dp"
            android:layout_height="34dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/ellipse_home_details">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="查看活动详情"
                android:textColor="#FFD85D27"
                android:textSize="12dp"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/CG_lijifenxiang"
            android:layout_width="110dp"
            android:layout_height="34dp"
            android:layout_marginLeft="20dp"
            android:background="@drawable/zhifu_cg_yuanjiao">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="立即分享"
                android:textColor="#ffffff"
                android:textSize="12dp"/>
        </RelativeLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/CG_shijian"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="报名时间：2018-09-10  14:59:00"
        android:textColor="#FF9B9B9B"
        android:textSize="14dp"
        android:layout_marginTop="90dp"
        android:layout_gravity="center"
        />
</LinearLayout>